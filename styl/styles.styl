body
	margin 0
	padding 0
	font-family sans-serif
	font-size 16px
	background-image url("../img/universe.jpg")	
	
.Nav
	display inline-block
	margin 0
	padding 0
	
	&-list
		list-style none
		margin 0
		padding 0
		
	&-listItem
		padding 1em
		background #5F7C8A
		margin .5em 0
		border-radius 5px
		text-align center
		transition all .5s linear
		&:hover
			background lightblue
			border-bottom 2px solid grey
		a
			text-decoration none
			color white
			padding 1em

.Main-title
	color white
	font-weight lighter
	text-align center
	
.mercury-orbit
	width 30px
	height 30px
	border 1px solid white
	border-radius 50%
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	margin auto
	display inline-block
	transition all 3s linear
	-webkit-animation rotar 2.5s infinite linear

